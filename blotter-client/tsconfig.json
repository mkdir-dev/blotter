{
  "compilerOptions": {
    // "target": "esnext",
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext", "ESNext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "paths": { "@/*": ["./src/*"] },

    //
    "allowSyntheticDefaultImports": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "removeComments": false,
    "preserveConstEnums": true,
    "sourceMap": true,
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "declaration.d.ts"],
  "exclude": ["node_modules"]
}
